<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelyoshimura.secondtryapp.MainActivity"
    android:orientation="vertical"
    android:background="#c9eff4">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_schedule"
        android:id="@+id/button3"
        android:background="#1bddfb"
        android:layout_margin="10dp" />

    <Button

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_class_id"
        android:id="@+id/button2"
        android:background="#1bddfb"
        android:layout_margin="10dp"
        android:allowUndo="true" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:textAlignment="textStart"
            android:editable="true"
            android:elegantTextHeight="false"
            android:autoText="true"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.92"
            android:inputType="number"
            android:textIsSelectable="false"
            android:hint="Enter Class ID to remove" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:id="@+id/button"
            android:background="#1bddfb"
            android:singleLine="false"
            android:layout_margin="10dp"
            android:layout_weight="0.07" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:textAlignment="textStart"
            android:editable="true"
            android:elegantTextHeight="false"
            android:autoText="true"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.92"
            android:inputType="number"
            android:textIsSelectable="false"
            android:hint="Enter Class ID for directions" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:id="@+id/button4"
            android:background="#1bddfb"
            android:singleLine="false"
            android:layout_margin="10dp"
            android:layout_weight="0.07" />
    </LinearLayout>



</LinearLayout>
